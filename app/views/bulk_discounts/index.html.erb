<h1>Discount Dashboard</h1>
<div class="links">
  <%= link_to "Create New Discount", "/merchants/#{params[:merchant_id]}/bulk_discounts/new" %>
</div>
<div class="discounts">
<% @discounts.each_with_index do |discount, index| %>
  <h2> <%= link_to "Discount: #{index +1}", "/merchants/#{discount.merchant.id}/bulk_discounts/#{discount.id}"  %></h2>
  <p>Discount Rate:<%= discount.discount_rate %></p>
  <p>Discount Threshold:<%= discount.threshold %></p>
<% end %>
</div>



<div class="upcomingholidays">
  <h2>Upcoming Holidays</h2>
  <% @holidays.each do |holiday| %>
  <p><%= holiday.name %> IS ON <%= holiday.date %></p>
  <% end %>

</div>
